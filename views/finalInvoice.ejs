          <% if (records){%>
            <div class="container bg-secondary text-light rounded-lg mt-4 p-3 mb-2 mb-2">
                <div class="container">
                    <h3 class="h3 text-center">Invoice Details</h3>
                    <div class="row">
                        <div class="col-md-4 mt-2">
                            <div class="h4 "> Invoice to
                            </div>
                            <div class="lead clientName ">
                                <%=records.clientName%>
                            </div>
                            <div class="lead clientAddress mt-2">
                                <%=records.clientAddress%>
                            </div>
                        </div>
                        <div class="col-md-4 mt-2 mb-2 text-center">
                                            <div class=" d-inline"> Invoice Date :
                                            </div>
                                            <div class="lead d-inline">
                                                <%=records.createdAt.toLocaleDateString()%>
                                            </div><br>
                                            <div class="invoice d-inline"> Invoice Number :
                                            </div>
                                            <div class="lead d-inline">
                                                <%=records.invoiceNumber%>
                                            </div><br>
                                            <div class=" d-inline"> Payment Due Date :
                                            </div>
                                            <div class="lead d-inline">
                                                <%=records.invoiceDate%>
                                            </div><br>
                        </div>
                        <div class="col-md-4 mb-2 mt-2">
                            <div class="mt-2 h2"> Subhash Kumar
                            </div>
                            <div class="clientAddress">If You Like this project Please Give star on My Github Repo
                                <a href="https://github.com/remo227" target="_blank" class="btn btn-sm btn-success">My Github Page</a>
                            </div>
                        </div>
                        <table class="table table-striped table-bordered text-light" id="tbUser">
                            <thead>
                                <tr>
                                    <th scope="col" style="width:2%" class="text-center">#</th>
                                    <th scope="col" style="width:43%" class="text-left">Item Name</th>
                                    <th scope="col" style="width:20%" class="text-left">Description</th>
                                    <th scope="col" style="width:12%" class="text-center">Price/Unit</th>
                                    <th scope="col" style="width:12%" class="text-center">Quantity</th>
                                    <th scope="col" style="width:11%" class="text-center">Price</th>
                                </tr>
                            </thead>
                            <tbody class="form-group">
                                <% for (var i = 0 ; i<records.product.description.length; i++){%>
                                    <tr class="item-row">
                                    <% let v = parseInt([i])+1%>
                                        <td class="text-center"><%=v%></td>
                                        <td>
                                            <%= records.product.itemName[i]%>
                                        </td>
                                        <td>
                                            <%= records.product.description[i]%>
                                        </td>
                                        <td class="text-center">
                                            <%= records.product.itemPrice[i]%>
                                        </td>
                                        <td class="text-center">
                                            <%= records.product.qty[i]%>
                                        </td>
                                        <td class="text-center">
                                            <%= records.product.price[i]%>
                                        </td>
                                    </tr>
                                    <%}%>
                            </tbody>
                        </table>
                        <div class="row w-100">
                            <div class="col-md-4">
                                <div class="companyName"> Ship to :</div>
                                <div class="shipTo mt-2 w-90">
                                </div>
                            </div>
                            <div class="col-md-8 text-right">
                                <div class="price "> Subtotal  â‚¹:
                                    <div class="lead d-inline">
                                        <%= records.subTotal%>
                                    </div>
                                </div>
                                <hr>
                                    <div class="price"> TAx @ 18% :
                                            <div class="lead d-inline">
                                                <%=records.gst%>
                                            </div>
                                        </div>
                                            <hr>
                                            <div class="price"> Advance :
                                                <div class="lead d-inline">
                                                    <%=records.advance%>
                                                </div>
                                            </div>
                                            <hr>
                                            <div class="price"> Balance Due :
                                                <div class="lead d-inline">
                                                    <%=records.balancedue%>
                                                </div>
                                            </div>
                                            <hr>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <h5 class="h5  ">Terms & Conditions</h5>
                        <ul class="list-group bg-secondary ">
                            <li class="list-group-item bg-secondary  "> Cheque must be in favour of Company Name</li>
                            <li class="list-group-item bg-secondary "> Goods once purchased will not be returned.</li>
                            <li class="list-group-item bg-secondary "> This is computer generated Invoice ; Hence no signature required.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
            <%}%>
    
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

